<body class="hold-transition skin-blue sidebar-mini" style="padding:0;">
  <div class="wrapper">
    <header class="main-header">
      <!-- Logo -->
      <a class="title logo">
        <!-- logo for regular state and mobile devices -->
        <b>Economico</b>
      </a>
      <!-- Header Navbar: style can be found in header.less -->
      <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
          <ul class="nav navbar-nav">
            <!-- Notifications: style can be found in dropdown.less -->
            <li class="dropdown notifications-menu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-bell-o"></i>
                <span class="label label-danger">1</span>
              </a>
              <ul class="dropdown-menu">
                <li class="header">You have 1 notification</li>
                <li>
                  <!-- inner menu: contains the actual data -->
                  <ul class="menu">
                    <li>
                      <a href="#">
                        <i class="fa fa-warning text-red"></i> You reached $100 this month!
                      </a>
                    </li>
                  </ul>
                </li>
              </ul>
            </li>

            <!-- User Account: style can be found in dropdown.less -->
            <li class="dropdown user user-menu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                {{#if user.pic}}
                  <img src="/dist/img/user2-160x160.jpg" class="user-image" alt="User Image"/>
                  {{else}}
                    <img src="/img/user.png" class="user-image" alt="User Image"/>
                {{/if}}
                <span class="hidden-xs">{{user.name}}</span>
              </a>
              <ul class="dropdown-menu">
                <!-- User image -->
                <li class="user-header">
                  <p>
                    {{user.name}}
                  </p>
                  <p>
                    <small>Balance: ${{user.limit}}</small>
                  </p>
                  <p>
                    <small>{{user.email}}</small>
                  </p>
                  <p>
                    <small>Spent: ${{user.total}}</small>
                  </p>
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-left">
                    <a href="#" class="btn btn-default btn-flat">Profile</a>
                  </div>
                  <div class="pull-right">
                    <a href="#" class="btn btn-default btn-flat">Sign out</a>
                  </div>
                </li>
              </ul>
            </li>
            <!-- Control Sidebar Toggle Button -->
            <li>
              <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

      <!-- sidebar: style can be found in sidebar.less -->
      <section class="sidebar">
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
          <li>
            <a href="#">
          <i class="fa fa-calendar"></i> <span>Compare</span>
        </a>
          </li>
          <li>
            <a href="#"><i class="fa fa-gears"></i> <span>Settings</span>
            </a>
          </li>
          <li>
            <a href="{{user._id}}/trash/"><i class="fa fa-trash ask-trash-expense"></i> <span>Trash</span>
            </a>
          </li>
          <li>
            <!-- search form -->
            <form action="#" method="get" class="sidebar-form">
              <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                  <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                  </button>
                </span>
              </div>
            </form>
          </li>
        </ul>
      </section>
      <!-- /.sidebar -->
    </aside>

    {{!-- JS DATA --}}
    <ul class="hidden categories-list">
      {{#each categories}}
        <li id="{{this.name}}" data-color="{{this.color}}" data-total="{{this.total}}"></li>
      {{/each}}
    </ul>
    <ul class="hidden totals">
      <li class="total"></li>
    </ul>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
        Dashboard
        <small>Control panel</small>
      </h1>
        <ol class="breadcrumb">
          <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
          <li class="active">Dashboard</li>
        </ol>
      </section>

      <!-- Main content -->
      <section class="content">
        <!-- Main row -->
        <div class="row">
          <!-- Left col -->
          <section class="col-lg-7 connectedSortable">
            <div class="box box-primary">
              <!-- Custom tabs (Charts with tabs)-->
              <div class="nav-tabs-custom">
                <!-- Tabs within a box -->
                <ul class="nav nav-tabs pull-right">
                  <li class="active"><a href="#expenses-list" data-toggle="tab">List</a></li>
                  <li><a href="#expenses-doughnut-chart" class="is-chart" data-toggle="tab">Doughnut</a></li>
                  <li><a href="#expenses-bar-chart" class="is-chart" data-toggle="tab">Bars</a></li>
                  <li class="pull-left header"><i class="fa fa-inbox"></i> Expenses</li>
                </ul>
              </div>
              <!-- /.nav-tabs-custom -->
              <div class="tab-content">
                <!-- Espenses - Default: List -->
                <div class="chart tab-pane active" id="expenses-list" style="position: relative;">
                  {{!-- <div class="box-header">
                    <div class="input-group input-group-sm pull-right" style="width: 150px;">
                      <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                      <div class="input-group-btn">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                      </div>
                    </div>
                  </div> --}}
                  <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->

                  <div class="box-body table-responsive">
                    <table id="table-expenses" class="table table-hover dataTable" data-userId="{{user._id}}">
                      <thead>
                        <tr>
                          <th>Title</th>
                          <th>Description</th>
                          <th>Category</th>
                          <th>Amount</th>
                          <th>Date</th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each user.costs}}
                          <tr id="{{this._id}}">
                            <td class="title">{{this.title}}</td>
                            <td class="description">{{this.description}}</td>
                            <td class="category"><span class="label">{{this.category}}</span></td>
                            <td class="amount">${{this.amount}}</td>
                            <td class="date">{{this.createdAt}}</td>
                            <td class="tools">
                              <a data-toggle="modal" data-target="#modal-edit-expense" class="fa fa-edit edit-expense"></a>
                              <a data-toggle="modal" data-target="#modal-trash-expense" class="fa fa-trash-o ask-trash-expense"></a>
                            </td>
                          </tr>
                          {{else}}
                            <tr id="no-data-found">
                              <td colspan="5">No expenses registered!</td>
                            </tr>
                        {{/each}}
                      </tbody>
                      <tfoot>
                        <tr>
                          <th>Title</th>
                          <th>Description</th>
                          <th>Category</th>
                          <th>Amount</th>
                          <th>Date</th>
                          <th></th>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                </div>

                <div class="chart tab-pane" id="expenses-doughnut-chart" style="position: relative; height: 300px;">
                  <!-- doughnut CHART -->
                  <div class="box-body">
                    <canvas id="doughnutChart"></canvas>
                  </div>
                  <!-- /.box-body -->
                </div>
                <div class="chart tab-pane" id="expenses-bar-chart" style="position: relative;">
                  <!-- doughnut CHART -->
                  <div class="box-body">
                    <canvas id="barChart"></canvas>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <div class="box-footer clearfix no-border">
                <button type="button" class="btn btn-default pull-right" data-toggle="modal" data-target="#modal-add-expense">
              <i class="fa fa-plus"></i>
              Add item
            </button>
              </div>
              <!-- MODAL ADD EXPENSE-->
              <div class="modal fade" id="modal-add-expense">
                <div class="modal-dialog">
                  <div class="box box-primary">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Expense</h4>
                      </div>
                      <!-- form start -->
                      <form id="add-expense-form" role="form" method="post" action="/costs/">
                        <div class="modal-body">
                          <input required type="hidden" name="userid" value="{{user._id}}">
                          <div class="form-group">
                            <label for="input-title">Title</label>
                            <input required type="text" class="form-control" name="title" placeholder="i.e. War and Peace book - Amazon">
                          </div>
                          <div class="form-group">
                            <label for="input-title">Amount</label>
                            <input required type="text" class="form-control" name="amount" placeholder="i.e. 20">
                          </div>
                          <div class="form-group">
                            <label for="email">Description</label>
                            <textaera class="form-control" name="description" placeholder="i.e. Hardcopy version.">
                          </div>
                          <!-- select -->
                          {{#if categories}}
                            <div class="form-group">
                              <label>Category</label>
                              <select name="category" class="form-control">
                              {{#each categories}}
                              <option value="{{@index}}">{{@index}}</option>
                              {{/each}}
                            </select>
                            </div>
                          {{/if}}
                        </div>
                        <div class="modal-footer">
                          <button type="submit" class="btn btn-primary pull-left">Submit</button>
                          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                      </form>

                    </div>
                    <!-- /.modal-content -->
                  </div>
                  <!-- /.box -->
                </div>
                <!-- /.modal-dialog -->
              </div>
              <!-- /.modal -->
              <!-- MODAL EDIT EXPENSE-->
              <div class="modal fade" id="modal-edit-expense">
                <div class="modal-dialog">
                  <div class="box box-primary">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Expense</h4>
                      </div>

                      <!-- form start -->
                      <form id="edit-expense-form" role="form" method="post" action="/costs/">
                        <div class="modal-body">
                          {{!-- <input required type="hidden" name="userid" value="{{user._id}}">
                          <input required type="hidden" name="costid" value=""> --}}
                          <div class="form-group">
                            <label for="input-title">Title</label>
                            <input required type="text" class="form-control" name="title" placeholder="i.e. War and Peace book - Amazon">
                          </div>
                          <div class="form-group">
                            <label for="input-title">Amount</label>
                            <input required type="text" class="form-control" name="amount" placeholder="i.e. 20">
                          </div>
                          <div class="form-group">
                            <label for="email">Description</label>
                            <textaera class="form-control" name="description" placeholder="i.e. Hardcopy version.">
                          </div>
                          <!-- select -->
                          {{#if categories}}
                            <div class="form-group">
                              <label>Category</label>
                              <select name="category" class="form-control">
                              {{#each categories}}
                              <option value="{{@index}}">{{@index}}</option>
                              {{/each}}
                            </select>
                            </div>
                          {{/if}}
                        </div>
                        <div class="modal-footer">
                          <button type="submit" class="btn btn-primary pull-left">Submit</button>
                          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        </div>
                      </form>

                    </div>
                    <!-- /.modal-content -->
                  </div>
                  <!-- /.box -->
                </div>
                <!-- /.modal-dialog -->
              </div>
              <!-- /.modal -->
              <!-- MODAL DELETE EXPENSE-->
              <div class="modal fade" id="modal-trash-expense">
                <div class="modal-dialog">
                  <div class="box box-primary">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Delete Expense</h4>
                      </div>
                      <div class="modal-body">
                        <p>
                          Are you sure you want to delete this expense?
                        </p>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-primary trash-expense pull-left">Delete</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                      </div>

                    </div>
                    <!-- /.modal-content -->
                  </div>
                  <!-- /.box -->
                </div>
                <!-- /.modal-dialog -->
              </div>
              <!-- /.modal -->
            </div>
          </section>
          <!-- /.Left col -->
        </div>
        <!-- /.row (main row) -->

        <!-- Small boxes (Stat box) -->
        {{!-- <div class="row">
          <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
              <div class="inner">
                <h3>$</h3>
                <p>}</p>
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
              <a href="#" class="small-box-footer">More <i class="fa fa-arrow-circle-right"></i></a>
            </div>
          </div>
        </div> --}}
        <!-- /.row -->

      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- /.content-wrapper -->
    <footer class="main-footer">
      <div class="pull-right hidden-xs">
        <b>Version</b> 0.1
      </div>
      <strong>Copyright &copy; Economico </strong>
    </footer>

  </div>
  <!-- ./wrapper -->

  <!-- MODALS-->
  <!-- MODAL REGISTER-->
  <div class="modal fade" id="modal-register">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Default Modal</h4>
        </div>
        <div class="modal-body">
          <!-- form start -->
          <form role="form">
            <div class="form-group">
              <label for="input-name">Name</label>
              <input required type="text" class="form-control" id="input-name" name="name" placeholder="i.e. Name Lastname">
            </div>
            <div class="form-group">
              <label for="email">E-mail</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="i.e. test@test.test">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input required type="password" class="form-control" id="exampleInputPassword1" placeholder="i">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Monthly limit</label>
              <input required type="text" class="form-control" id="limit" placeholder="i.e. $7900">
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox"/> Remember me
              </label>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary pull-left">Submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  <!-- /.modal -->

</body>
